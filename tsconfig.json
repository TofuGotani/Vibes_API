{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./build",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "src/types"],
    "resolveJsonModule": true,
    "moduleResolution": "node",
  },
  "include": ["src/**/*.ts", "src/**/*.json", "src/**/*.js"],
  "exclude": ["node_modules"]
}
